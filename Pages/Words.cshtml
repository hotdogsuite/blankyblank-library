@page "/words"
@model BlankyBlankLibrary.Pages.WordsModel
@{
    ViewData["Title"] = "Words";
}
<div class="row">
    @foreach (var word in Model.Words) {
        <div class="col-12">
            <div class="card border border-primary mb-3">
                <h5 class="card-header text-bg-primary">@word.Name</h5>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th scope="row">Placeholder</th>
                                <td>@word.Placeholder</td>
                            </tr>
                            <tr>
                                <th scope="row">Optional</th>
                                <td>@word.Optional</td>
                            </tr>
                            <tr>
                                <th scope="row">Amount</th>
                                <td>@word.Amount</td>
                            </tr>
                            <tr>
                                <th scope="row">Max choices</th>
                                <td>@word.MaxChoices</td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="text-secondary">Words</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var wordWord in word.Words) {
                                            <li class="list-group-item">
                                                @wordWord.Word
                                                @if (wordWord.LinkedWords != null) {
                                                    <span class="text-secondary">@string.Join(", ", wordWord.LinkedWords.Select(x => x.Word))</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
